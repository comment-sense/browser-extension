{
  "name": "Comment Sense",
  "description": "AI powered YouTube comments analyzer",
  "version": "0.1.2",
  "manifest_version": 2,
  "icons": {
    "48": "icons/logo@48x48.png",
    "96": "icons/logo@96x96.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon@16x16.png",
      "32": "icons/icon@32x32.png",
      "64": "icons/icon@64x64.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["*://www.youtube.com/*"]
}
